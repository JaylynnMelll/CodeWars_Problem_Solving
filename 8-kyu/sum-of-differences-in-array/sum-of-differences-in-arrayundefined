#include <vector>
#include <algorithm>
â€‹
int sumOfDifferences(const std::vector<int>& arr)
{
    // exception handling
    if (arr.size() < 2) return 0;
    
    // make a copy
    std::vector<int> copy = arr;
  
    // sort the array in an descending order
    std::sort(copy.begin(), copy.end(), std::greater<int>());
  
    // get the sum
    int sum = 0;
    for (int i = 0; i < copy.size() - 1; ++i)
    {
        sum += copy[i] - copy[i + 1];
    }
  
    return sum;
}