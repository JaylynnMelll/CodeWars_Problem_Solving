std::string smash(const std::vector<std::string>& words)
{
    std::string result;
  
    // Exception handling (null)
    if (words.size() == 0) return "";
  
    for (int i = 0; i <words.size(); ++i)
    {
        result += words[i];
        
        // Adding space except last word
        if (i != words.size() - 1)  result += " ";
    }
    
    return result;
}